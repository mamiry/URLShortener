@model URLShortener.Domain.Command.WebUrl.WebUrlAddCommand 
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>افزودن لینک جدید</h1>
 
<hr /> 
<div class="row container">
    <div class="col-4 text-left">
        <label asp-for="Url" class="control-label"></label>
    </div>
    <div class="col-6" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Url" class="form-control  direction-left" placeholder="https://yourwebaddress.com/"/>
                <span asp-validation-for="Url" class="text-danger"></span>
         
                @if (ViewBag.Message != null)
                {
                    <div class="row text-danger container ">@ViewBag.Message</div>
                }  
                </div>

            <div class="form-group">
                <input type="submit" value="ثبت و ذخیره" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>

<div> 
    <a class="btn btn-dark" asp-action="Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
