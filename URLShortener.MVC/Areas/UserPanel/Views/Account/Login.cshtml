@model URLShortener.Domain.ViewModels.User.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="row margin-top-60">
    <div class="col-3"></div>
    <div class="col-6">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success text-center">@ViewBag.Message</div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
            }

            <div class="row ">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label> 
                    </div>
                </div>
                <div class="col-9">
                    <div class="form-group "> 
                        <input asp-for="UserName" class="form-control text-center" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label" ></label> 
                    </div>
                </div>
                <div class="col-9">
                    <div class="form-group"> 
                        <input asp-for="Password" type="password" class="form-control text-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-group">
                    @Html.DisplayNameFor(model => model.IsRemmember)
                    <input class="form-check-input margin-right-20" asp-for="IsRemmember" />
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="ورود به سایت" class="btn  btn-primary btn-block" />
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>

<div class="tab-pane">
    <br />
    <p>  کاربر جدید هستید ؟   <a asp-action="Register" asp-controller="Account" > ثبت نام نمایید</a></p>
   
</div>
<div>
    <a  href="/Home/Index">صفحه اصلی</a>
</div>
